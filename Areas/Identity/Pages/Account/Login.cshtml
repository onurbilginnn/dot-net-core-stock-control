<script>
    function load() {
        var arr = [];
       
         
        $.ajax({
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            type: "GET",
            url: "@Url.Action("Subeler", "Home")",
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        }).done(function (data) {
            arr = JSON.parse(data);
            for (var i = 0; i < arr.length; i++) {
                $('.subeNo').append('<option>' + arr[i].SubeNo + ' - ' + arr[i].SubeAdi + '</option>');
            }

            });
        window.history.pushState(null, "", window.location.href);
        window.onpopstate = function () {
            window.history.pushState(null, "", window.location.href);
        };
        $(document).keydown(function (e) {
            return (e.which || e.keyCode) != 116;
        });
        $(document).keydown(function (e) {
            return (e.which || e.keyCode) != 123;
        });
        document.onkeydown = function (e) {
            if (e.ctrlKey &&
                (
                    e.keyCode === 85 ||
                    e.keyCode === 117)) {
                return false;
            } else {
                return true;
            }
        };
        var SealoffSource = true; /* to disable the right mouse button, so the source can not been seen. */
        function click() { if (event.button == 2) { alert('Giriş Yasak!!!') } }
        document.onmousedown = click;
      
      };
    window.onload(load());
    
    function sendData() {
    var sube= $('.subeNo').val();
        var kAdi = $('.kAdi').val();
        var arr = [];

        arr[0] = sube;
        arr[1] = kAdi;
        $.ajax({
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            type: "POST",
            url: "/Home/Index",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(arr),
            dataType: "json",

        }).done(function (data) {

        });
        
          
    }
</script>

