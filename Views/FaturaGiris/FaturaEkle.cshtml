        <div class="col-xs-5"></div>
        <div class="float-right">
            <div class="col-xs-2">
                <label class="col-form-label">Kayıt Tarihi:</label>
                <div>@DateTime.Now.ToShortDateString()</div>
            </div>
        </div>
    </div>
