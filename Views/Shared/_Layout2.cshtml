                        <li><a asp-area="" asp-controller="StokSayim" asp-action="StokRaporuGiris">Periyodik Stok Sayımı</a></li>
                        <li><a asp-area="" asp-controller="StokSayim" asp-action="StokYilSayimListesi">Yıllık Stok Sayım Listesi</a></li>
                    </ul>
                </li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                        <div class="col-xs-8"></div>
                        <button type="submit" id="button-exit" class="btn btn-default ">Çıkış</button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="container">
            <nav class="navbar navbar-default navbar-fixed-top" style="z-index:98">
                <!-- Brand and toggle get grouped for better mobile display -->

                <div class="navbar-header navbar-right">

                    <a asp-controller="Home" asp-action="Index" class="navbar-brand" style="margin-top:-30px"> <img src="~/images/white_mill_LOGO.jpg" alt="WM" width="110" height="60" /></a>
                </div>
                <!-- Collection of nav links, forms, and other content for toggling -->
                <div class="col-xs-2 " style="width:250px"></div>
                <div>
                    <div><b> K.Adı: @Context.Session.GetString("User")</b></div>
                </div>
                <div class="col-xs-2" style="width:250px"></div>
                <div>
                    <div id="div-sube"><b>Şube: @Context.Session.GetString("Sube")</b></div>
                </div>
            </nav>
            <div class="row" style="margin-top:80px"></div>
            @RenderBody()
            <!--Ekleme Alanı-->
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - MAS<span class="pull-right">mathartsoft@yahoo.com</span></p>
            </footer>
            <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            <a href="javascript:" id="return-to-top"><i class="icon-chevron-up"></i></a>
        </div>
    </div>
   
    <environment include="Development">
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <!-- Bootstrap Js CDN -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        <script type="text/javascript">

            $(document).ready(function (e) {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
                window.history.pushState(null, "", window.location.href);
                window.onpopstate = function () {
                    window.history.pushState(null, "", window.location.href);
                };
                $(document).keydown(function (e) {
                    return (e.which || e.keyCode) != 116;
                });
                $(document).keydown(function (e) {
                    return (e.which || e.keyCode) != 123;
                });
                document.onkeydown = function (e) {
                    if (e.ctrlKey &&
                        (
                            e.keyCode === 85 ||
                            e.keyCode === 117)) {
                        return false;
                    } else {
                        return true;
                    }
                };
                var SealoffSource = true; /* to disable the right mouse button, so the source can not been seen. */
                function click() { if (event.button == 2) { alert('Giriş Yasak!!!') } }
                document.onmousedown = click;
            });

        </script>
        <script>
            // ===== Scroll to Top ====
            $(window).scroll(function () {
                if ($(this).scrollTop() >= 50) {        // If page is scrolled more than 50px
                    $('#return-to-top').fadeIn(200);    // Fade in the arrow
                } else {
                    $('#return-to-top').fadeOut(200);   // Else fade out the arrow
                }
            });
            $('#return-to-top').click(function () {      // When arrow is clicked
                $('body,html').animate({
                    scrollTop: 0                       // Scroll to top of body
                }, 500);
            });


        </script>

